<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/layout">

    <View
        android:id="@+id/backGround"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rectangle_5" />

    <View
        android:id="@+id/Input_Pad"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="216dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/rectangle_4" />

    <TextView
        android:id="@+id/PW"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="298dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="비밀번호"
        android:textAppearance="@style/IDst"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <TextView
        android:id="@+id/ID"
        android:layout_width="34dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="233dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="아이디"
        android:textAppearance="@style/IDst"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="149dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="세종대학교 제휴업체 지도"
        android:textAppearance="@style/Nst"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <!-- 회원가입 -->

    <Button
        android:id="@+id/Reg"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="358dp"
        android:layout_marginRight="48dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:text="회원가입"
        android:textAppearance="@style/Rest"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <View
        android:id="@+id/login_Rec"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="398dp"
        android:layout_marginRight="61dp"
        android:background="@drawable/rectangle_3"
        android:elevation="0dp" />

    <View
        android:id="@+id/input_Id"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="253dp"
        android:layout_marginRight="61dp"
        android:background="@drawable/rectangle_6" />

    <View
        android:id="@+id/input_pw"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="318dp"
        android:layout_marginRight="61dp"
        android:background="@drawable/rectangle_2" />

    <Button
        android:id="@+id/login_Btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="393dp"
        android:layout_marginRight="61dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:text="로그인"
        android:textAppearance="@style/login_Tx"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <EditText
        android:id="@+id/Id_Ex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="248dp"
        android:layout_marginRight="65dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="Input ID"
        android:inputType="text"
        android:maxLength="16"
        android:selectAllOnFocus="true"
        android:textAppearance="@style/Id_Ex" />

    <EditText
        android:id="@+id/pass_Ex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="314dp"
        android:layout_marginRight="65dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="Input PW"
        android:inputType="textPassword"
        android:maxLength="16"
        android:selectAllOnFocus="true"
        android:textAppearance="@style/Id_Ex"
        android:fontFamily="@font/inter"
        android:lineHeight="15sp"/>

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/login_logo" />


</RelativeLayout>