<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <View
        android:id="@+id/explainrect2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:background="@drawable/explainrect" />

    <TextView
        android:id="@+id/explain2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:text="이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / 이런리뷰, 저런리뷰 / "
        android:textAppearance="@style/shopname"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reviews2"
        android:layout_width="250dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="95dp"
        android:layout_weight="1"
        android:text="리뷰 3개"
        android:textAppearance="@style/reviews"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profilename2"
        android:layout_width="250dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="118dp"
        android:layout_weight="1"
        android:text="신수철"
        android:textAppearance="@style/shopname"
        android:textStyle="bold" />

    <Button
        android:id="@+id/friendregis2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="98dp"
        android:layout_weight="1"
        android:background="@drawable/friendregis"
        app:iconTint="@color/design_default_color_error" />

</RelativeLayout>